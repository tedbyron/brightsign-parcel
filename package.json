{
  "name": "brs-parcel",
  "license": "MIT",
  "author": "Teddy Byron <ted@tedbyron.com>",
  "private": true,
  "packageManager": "yarn@3.1.1",
  "web": "dist/web.html",
  "api": "dist/api.js",
  "targets": {
    "web": {
      "source": "src/index.html",
      "context": "browser",
      "outputFormat": "esmodule",
      "sourceMap": false,
      "publicUrl": "."
    },
    "api": {
      "source": "api/index.ts",
      "context": "node",
      "outputFormat": "commonjs",
      "includeNodeModules": {
        "@brightsign/networkstatus": false
      },
      "sourceMap": false
    }
  },
  "browserslist": "chrome >= 65",
  "engines": {
    "node": ">= 10"
  },
  "ts-standard": {
    "project": "./tsconfig.json"
  },
  "scripts": {
    "build": "rimraf dist/*; parcel build --target web --target api",
    "build:web": "rimraf dist/web*; parcel build --target web",
    "build:api": "rimraf dist/api*; parcel build --target api",
    "serve": "rimraf dist/web*; parcel serve --target web --open",
    "watch": "rimraf dist/api*; parcel watch --target api",
    "tsc": "tsc --noemit",
    "tsc:watch": "tsc --noemit --watch",
    "lint": "ts-standard --report stylish",
    "lint:fix": "ts-standard --report stylish --fix"
  },
  "dependencies": {
    "express": "^4.17.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@parcel/transformer-svg-react": "^2.2.1",
    "@parcel/validator-typescript": "^2.2.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.10",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/rimraf": "^3",
    "autoprefixer": "^10.4.2",
    "cssnano-preset-advanced": "^5.1.10",
    "parcel": "^2.2.1",
    "postcss": "^8.4.5",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.15",
    "ts-standard": "^11.0.0",
    "typescript": "^4.5.4"
  }
}
